model User {
  id                  Int        @id @default(autoincrement())
  name                String?
  email               String     @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @default(now())
  learnings           Learning[]
}

model Learning {
  id          Int             @id @default(autoincrement())
  name        String?
  audioURL    String
  imageList   Image[]
  typingList  TypingScript[]
  cursorList  CursorScript[]
  sidebarList SidebarScript[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @default(now())
  User        User?           @relation(fields: [userId], references: [id])
  userId      Int?
}

model SidebarScript {
  id         Int       @id @default(autoincrement())
  order      Int
  timeDiff   String
  isOpen     Boolean
  PageNumber Int
  Learning   Learning? @relation(fields: [learningId], references: [id])
  learningId Int?
}

model CursorScript {
  id         Int       @id @default(autoincrement())
  order      Int
  timeDiff   String
  positionX  Int
  positionY  Int
  hidden     Boolean
  Learning   Learning? @relation(fields: [learningId], references: [id])
  learningId Int?
}

model TypingScript {
  id         Int       @id @default(autoincrement())
  order      Int
  timeDiff   String
  css        String
  html       String
  js         String
  learning   Learning? @relation(fields: [learningId], references: [id])
  learningId Int?
}

model Image {
  id         Int       @id @default(autoincrement())
  title      String
  url        String
  Learning   Learning? @relation(fields: [learningId], references: [id])
  learningId Int?
}
